<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/acceuil"
    android:orientation="vertical"
    tools:context=".RegistreActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="50dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registre Now"
                android:textColor="@color/colorblak"
                android:textSize="36sp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/id_editText_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle_3"
        android:paddingLeft="10dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/id_editText_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle_3"
        android:paddingLeft="10dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/id_editText_password1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle_3"
        android:paddingLeft="10dp"
        android:ems="10"
        android:hint="password"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
         android:background="@drawable/rectangle_3"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/id_editText_password2"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColorLink="@color/colorxd" />

        <CheckBox
            android:id="@+id/id_checkBox_show_password"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"

            />
    </LinearLayout>


        <CheckBox
            android:id="@+id/id_checkBox_savedata"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Conserver Les DonnÃ©es De Connexion"
            android:textColor="@color/colorblak"
            android:textColorHint="#8BC34A"
            android:textColorLink="#FF9800"
            android:textStyle="italic" />

        <Button
            android:id="@+id/id_button_singUp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/animationbuttonlogin"
            android:onClick="signUp"
            android:text="S'inscrit maintenet"
            android:textColor="@color/colorblak" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="______________OR______________"
            android:textColor="@color/colorblak"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

        <Button
            android:id="@+id/id_button_se_connect"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/animationbuttonlogin"
            android:onClick="go_to_login"
            android:text="go to page Acceuil"
            android:textColor="@color/colorblak" />


</LinearLayout>


</LinearLayout>

    </ScrollView>
</LinearLayout>